<p id="notice"><%= notice %></p>

<h1>Piny</h1>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>Obraz</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr valign="middle">
        <td><%= image_tag pin.image.url :medium %></td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Pokaż', pin %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edycja', edit_pin_path(pin) %></td>
          <td><%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Na pewno usunąć pin?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy Pin', new_pin_path %>
