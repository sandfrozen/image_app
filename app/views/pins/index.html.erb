<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
  <div class="box">
    <div class="panel panel-default">
      <%= link_to pin do %>
      <div class="imagebox">
        <%= image_tag pin.image.url(:medium) %>
        <div class="overlay">
          <div class="text"><em>@<%= pin.user.name if pin.user %></em></div>
        </div>
        <% end %>
      </div>
      <div class="panel-heading">
      <%= pin.description %>
      <% if pin.user == current_user %>
        <div class="pull-right">
          <%= link_to '', edit_pin_path(pin), class: 'small glyphicon glyphicon-pencil' %>
          <%= link_to '', pin, class: 'small glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Na pewno usunąć pin?' } %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="center">
  <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>